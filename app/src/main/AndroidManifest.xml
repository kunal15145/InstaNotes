<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mcproject.instanotesv1">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:hardwareAccelerated="true"
        android:icon="@drawable/instanoteslogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/instanoteslogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".my_courses"
            android:screenOrientation="portrait"
            android:hardwareAccelerated="true"
            android:label="@string/title_activity_my_courses"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity android:name=".StartScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".IntroductionScreen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:screenOrientation="portrait"
            android:name=".join_courses"
            android:hardwareAccelerated="true">
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".SearchResultsActivity" />
        </activity>
        <activity android:name=".SearchResultsActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".PreviewNotes"
            android:screenOrientation="portrait"/>
        <activity android:name=".Notifications"
            android:screenOrientation="portrait"/>
        <activity android:name=".Transactions"
            android:screenOrientation="portrait"/>
        <activity android:name=".Account"
            android:screenOrientation="portrait"/>
        <activity android:name=".Help"
            android:screenOrientation="portrait"/>
        <activity android:name=".feedback"
            android:screenOrientation="portrait"/>
        <activity android:name=".settings"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Admin_course"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_admin_course"
            android:theme="@style/AppTheme" />
        <activity android:name=".Admin_addcourses" />
        <activity
            android:screenOrientation="portrait"
            android:name=".DatesTab"
            android:label="@string/title_activity_dates_tab"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".FullImageViewer"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_full_image_viewer"
            android:theme="@style/FullscreenTheme"></activity>
    </application>

</manifest>